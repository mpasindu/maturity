# PostgreSQL Database with Restored Dump
FROM postgres:15-alpine

# Copy the database dump
COPY maturity_db_backup.dump /tmp/maturity_db_backup.dump

# Create a simple restoration script in init directory
RUN mkdir -p /docker-entrypoint-initdb.d && \
    printf '%s\n' \
  '#!/bin/bash' \
  'echo "Checking for database dump..."' \
  'if [ -f /tmp/maturity_db_backup.dump ]; then' \
  '  echo "Starting database restore from dump..."' \
  '  pg_restore --clean --if-exists -U postgres -d postgres /tmp/maturity_db_backup.dump 2>&1' \
  '  echo "Database restore completed"' \
  '  rm /tmp/maturity_db_backup.dump' \
  'else' \
  '  echo "No database dump found"' \
  'fi' > /docker-entrypoint-initdb.d/01-restore.sh && \
    chmod +x /docker-entrypoint-initdb.d/01-restore.sh

# Set environment variables
ENV POSTGRES_DB=maturity
ENV POSTGRES_USER=postgres
ENV POSTGRES_PASSWORD=maturity123

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=30s --retries=5 \
    CMD pg_isready -U postgres

EXPOSE 5432
